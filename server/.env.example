# INTEGRA - Configuración del Servidor

# OpenAI API Key (opcional pero recomendado para IA avanzada)
# Obtén tu clave en: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# Configuración de puertos
PORT=5000
FRONTEND_PORT=3000
PYTHON_SOLVER_PORT=8000

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de la aplicación
NODE_ENV=development
APP_NAME=INTEGRA
APP_VERSION=2.0.0

# Configuración de precisión matemática
DEFAULT_PRECISION=50
MAX_PRECISION=200

# Configuración de IA
AI_TIMEOUT=15000
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/integra.log
